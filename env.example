# Environment Configuration for Botnet Research Project
# Copy this file to .env and customize for your environment

# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_PASSWORD=secure_research_database_password_change_me
DB_HOST=postgres
DB_PORT=5432
DB_NAME=botnet_research
DB_USER=botnet_user

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_PASSWORD=secure_redis_password_change_me
REDIS_HOST=redis
REDIS_PORT=6379

# ========================================
# C2 SERVER CONFIGURATION
# ========================================
C2_PORT=8443
C2_HTTP_PORT=8080
C2_DOMAIN=localhost
C2_SSL_CERT=/certs/server.crt
C2_SSL_KEY=/certs/server.key

# ========================================
# MONITORING CONFIGURATION
# ========================================
GRAFANA_PASSWORD=secure_grafana_admin_password_change_me
PROMETHEUS_RETENTION=200h

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
ELK_PASSWORD=secure_elk_password_change_me

# ========================================
# RESEARCH ENVIRONMENT
# ========================================
RESEARCH_MODE=true
ETHICAL_CONTROLS=enabled
AUTO_CLEANUP=true
MAX_CONNECTIONS=10
SESSION_TIMEOUT=3600

# ========================================
# DEVELOPMENT SETTINGS
# ========================================
DEBUG_MODE=false
DEV_TOOLS=false
MOCK_DATA=false

# ========================================
# SECURITY SETTINGS
# ========================================
ENCRYPTION_KEY=your_32_character_encryption_key_here_change_me
JWT_SECRET=your_jwt_secret_key_for_authentication_change_me
API_RATE_LIMIT=100
MAX_FILE_SIZE=10MB

# ========================================
# NETWORK CONFIGURATION
# ========================================
DOCKER_NETWORK_SUBNET=172.20.0.0/16
EXTERNAL_ACCESS=false
FIREWALL_ENABLED=true

# ========================================
# BACKUP AND RECOVERY
# ========================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true

# ========================================
# COMPLIANCE AND AUDITING
# ========================================
AUDIT_LOGGING=enabled
COMPLIANCE_MODE=research
DATA_RETENTION_DAYS=90
ANONYMIZATION=enabled

# ========================================
# DEPLOYMENT CONFIGURATION
# ========================================
ENVIRONMENT=development
CONTAINER_REGISTRY=local
IMAGE_TAG=latest
DEPLOY_REGION=local

# ========================================
# NOTIFICATION SETTINGS
# ========================================
ALERT_EMAIL=security-team@research-project.local
SLACK_WEBHOOK=
INCIDENT_ESCALATION=true

# ========================================
# RESEARCH SPECIFIC SETTINGS
# ========================================
RESEARCH_PROJECT_ID=botnet-research-2025
ETHICAL_APPROVAL_ID=IRB-2025-001
PRINCIPAL_INVESTIGATOR=Research Team Lead
INSTITUTION=Research Institution

# ========================================
# SAFETY AND KILL SWITCHES
# ========================================
EMERGENCY_STOP_ENABLED=true
AUTO_TERMINATE_HOURS=24
GEOGRAPHIC_RESTRICTION=enabled
VICTIM_PROTECTION=enabled

# WARNING: Never commit the actual .env file to version control!
# These are example values that should be changed for actual use.
